{% extends 'base.html.twig' %}

{% block titre %} Famille {{ famille.libelle }} {% endblock %}

{% block body %}

    <div>{{ famille.description }}</div>
    <div class="row">
    {% for animal in famille.animaux %} 
        <div class="col-6">
            <div class="row align-items-center">
                <div class="col-12 col-md-6 col-lg-2 text-center">
                    <img src="{{asset('images/' ~ animal.nom ~ '.png' )}}" class="img-fluid">
                </div>
                <div class="col text-center">
                    <h2> <a href="{{ path('afficher_animal', {'id': animal.id}) }}">{{ animal.nom }}</a></h2>
                    <div>{{ animal.description }}</div>
                    <div>
                    {% for continent in animal.continents %}
                        <a class="btn btn-warning" href="{{ path('afficher_continent', {'id': continent.id}) }}">{{ continent.libelle }}</a>
                    {% endfor %}
                    </div>
                </div>
            </div>
        </div>
    {% endfor %}
    </div>

{% endblock %}